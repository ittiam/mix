#!/usr/bin/env node
'use strict';

const check = require('../util/check');
const localmix = check.localExists('@mixup/mix');
const exec = require('../util/exec');

if (localmix) {
  exec(
    require('path').resolve(process.cwd(), 'node_modules/@mixup/mix/bin/mix-watch'),
    process.argv.slice(2),
    { stdio: 'inherit' }
  );
} else {
  exec(
    require('path').resolve(
      __dirname,
      check.isYarn() ? '../../' : '../node_modules',
      './@mixup/mix/bin/mix-watch'
    ),
    process.argv.slice(2),
    { stdio: 'inherit' }
  );
}
